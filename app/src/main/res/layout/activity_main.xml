<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_area"
        android:hint="Area"/>
    <EditText
        android:id="@+id/bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No of Bedroom"/>
    <EditText
        android:id="@+id/bathroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No of Bathroom"/>
    <EditText
        android:id="@+id/stories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No of Stories"/>
    <EditText
        android:id="@+id/mainroad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="mainrood"/>
    <EditText
        android:id="@+id/guestroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="gurstRoom"/>
    <EditText
        android:id="@+id/basement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="basement"/>

    <EditText
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hot water"/>
    <EditText
        android:id="@+id/ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="air conditioning"/>
    <EditText
        android:id="@+id/parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="parking"/>
    <EditText
        android:id="@+id/prefarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="prefarea"/>
    <EditText
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="furnishing status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000000"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/price"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:text="Submit"/>

</LinearLayout>